.side_bar
  .side_bar__user-name
    .side_bar__user-name__top-items
      %p.side_bar__user-name__top-items__name
        = current_user.name
      %ul.side_bar__user-name__top-items__menu 
        %li.side_bar__user-name__top-items__menu__new-group
          = link_to new_group_path do
            = icon('fas', 'edit', class: 'icon')
        %li.side_bar__user-name__top-items__menu__edit-user
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: 'icon')

        
  .side_bar__groups
    - current_user.groups.each do |group|
      .side_bar__groups__group
        = link_to group_messages_path(group) do
          = group.name
      .side_bar__groups__messages
        = group.show_last_message
    