.main_chat__message__position1
  .main_chat__message__position1__user1
    .main_chat__message__position1__user1__name  
      = message.user.name
    .main_chat__message__position1__user1__date  
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .main_chat__message__position1__text1
    - if message.content.present?
      %p.lower-message__content
        = message.content
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?

 
    